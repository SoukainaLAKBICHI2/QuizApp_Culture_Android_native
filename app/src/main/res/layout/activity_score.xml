<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <!-- Logo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary1"
        android:layout_marginStart="20dp"/>

    <!-- Score Text -->
    <EditText
        android:id="@+id/editTextScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:gravity="center"
        android:text="Your score is:"
        android:textColor="#031666"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp" />

    <!-- Score Result -->
    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:gravity="center"
        android:text="80%"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBarScore"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="12dp"
        android:progress="80"
        android:max="100"
        android:progressTint="#4CAF50"
        android:backgroundTint="#D3D3D3"
        android:layout_marginBottom="32dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonlogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp" />

        <Button
            android:id="@+id/buttontry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp" />
    </LinearLayout>
    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonRunking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Runking"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp" />

        <Button
            android:id="@+id/buttonResponse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Show Responses"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="10dp" />
    </LinearLayout>
</LinearLayout>
